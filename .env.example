# ===========================================
# INSURGE AI BACKEND - ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env and update the values

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL=postgresql://insurge_user:insurge_password@localhost:5432/insurge_db

# Database Pool Configuration
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_URL=redis://localhost:6379

# Redis Extended Configuration
REDIS_MAX_CONNECTIONS=100
REDIS_RETRY_ON_TIMEOUT=true
REDIS_SOCKET_KEEPALIVE=true
REDIS_HEALTH_CHECK_INTERVAL=30

# ===========================================
# JWT & AUTHENTICATION
# ===========================================
SECRET_KEY=your-super-secret-jwt-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Security Settings
PASSWORD_MIN_LENGTH=8
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15
SESSION_CLEANUP_INTERVAL_HOURS=24

# ===========================================
# APPLICATION SETTINGS
# ===========================================
DEBUG=true
ENVIRONMENT=development
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://127.0.0.1:3000"]

# Development Tools
ENABLE_CORS=true
ENABLE_DOCS=true
DOCS_URL=/docs
REDOC_URL=/redoc

# ===========================================
# MULTI-USER CHAT SYSTEM
# ===========================================
MAX_CHAT_PARTICIPANTS=50
DEFAULT_SESSION_TYPE=private
ALLOW_PUBLIC_SESSIONS=true
MESSAGE_HISTORY_LIMIT=1000

# WebSocket Configuration
WS_MAX_CONNECTIONS=1000
WS_MESSAGE_QUEUE_SIZE=100
WS_HEARTBEAT_INTERVAL=30
WS_CONNECTION_TIMEOUT=60
WEBSOCKET_PING_INTERVAL=30
WEBSOCKET_PING_TIMEOUT=10

# ===========================================
# AI SERVICE CONFIGURATION
# ===========================================
OPENAI_API_KEY=sk-your-openai-api-key-here

# AI Chat Settings
AI_RESPONSE_TIMEOUT=30
AI_MAX_TOKENS=500
AI_TEMPERATURE=0.7
AI_MODEL=gpt-3.5-turbo
ENABLE_AI_MODERATION=true

# ===========================================
# FILE UPLOAD & STORAGE
# ===========================================
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=["jpg", "jpeg", "png", "gif", "pdf", "txt", "docx"]
UPLOAD_DIRECTORY=uploads

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/app.log
ENABLE_REQUEST_LOGGING=true

# ===========================================
# EMAIL CONFIGURATION (Optional)
# ===========================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@insurge-ai.com
ENABLE_EMAIL_VERIFICATION=false

# ===========================================
# MONITORING & HEALTH CHECKS
# ===========================================
HEALTH_CHECK_TIMEOUT=30
ENABLE_METRICS=true
METRICS_PORT=9090

# ===========================================
# BACKGROUND TASKS
# ===========================================
TASK_QUEUE_SIZE=1000
WORKER_PROCESSES=4
TASK_TIMEOUT=300

# ===========================================
# PRODUCTION OVERRIDES
# ===========================================
# For production, set:
# DEBUG=false
# ENVIRONMENT=production
# SECRET_KEY=<generate-strong-secret-key>
# DATABASE_URL=<production-database-url>
# REDIS_URL=<production-redis-url>
# ALLOWED_ORIGINS=["https://your-domain.com"]
# LOG_LEVEL=WARNING
# ENABLE_DOCS=false
